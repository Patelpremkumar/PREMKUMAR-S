 using System; 
 
   class Program1 
   { 
      static void Main(string[] args) 
     { 
       Console.Write("Enter an integer: "); 
      int num = int.Parse(Console.ReadLine()); 
      int sum = 0; 
      while (num != 0) 
      { 
       sum += num % 10; 
       num /= 10; 
      } 
      Console.WriteLine("The sum of digits is " + sum); 
    } 
 }